<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title><%= waktu %></title>
    <link rel="stylesheet" href="/css/resep.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.css" />
</head>
<body>
    <!-- Navbar -->
    <%- include('./layouts/nav') %>

    <section class="heading-atas">
        <div class="heading-resep">
            <h1>Resep Makanan</h1>
            <p>Pilihan resep dengan waktu <%= waktu %></p>
        </div>
    </section>

    <!-- List Resep -->
    <section class="resep">
        <%- include('./resep/reseploop') %>
    </section>

    <div class="pagination">
        <% if (page > 1) { %>
            <a href="/waktu/<%= waktu %>?page=<%= page - 1 %>" class="prev">Previous</a>
        <% } %>

        <% for (let i = 1; i <= totalPages; i++) { %>
            <a 
                href="/waktu/<%= waktu %>?page=<%= i %>" 
                class="<%= i === page ? 'active' : '' %>">
                <%= i %>
            </a>
        <% } %>

        <% if (page < totalPages) { %>
            <a href="/waktu/<%= waktu %>?page=<%= page + 1 %>" class="next">Next</a>
        <% } %>
    </div>

    <!-- Footer -->
    <%- include('./layouts/footer') %>

    <script src="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    <script src="/js/main.js"></script>
</body>
</html>