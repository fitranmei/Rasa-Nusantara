<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Rasa Nusantara</title>
    <link rel="stylesheet" href="/css/home.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.css" />
</head>
<body>
    <!-- navbar -->
    <%- include('./layouts/nav') %>

    <section class="slider" id="slider">
        <!-- Swiper -->
        <div class="swiper mySwiper">
            <div class="swiper-wrapper">
            <div class="swiper-slide container-slider"><a href="/kategori/Makan%20Malam"><img src="/images/kategori/MakanMalam.png" alt="MakanMalam"></a></div>
            <div class="swiper-slide container-slider"><a href="/kategori/Makan%20Siang"><img src="/images/kategori/MakanSiang.png" alt="MakanSiang"></a></div>
            <div class="swiper-slide container-slider"><a href="/kategori/Resep%20Sayuran"><img src="/images/kategori/ResepSayuran.png" alt="ResepSayuran"></a></div>
            </div>
            <div class="swiper-button-next"></div>
            <div class="swiper-button-prev"></div>
            <div class="swiper-pagination"></div>
        </div>
    </section>

    <section class="Kategori" id="Kategori">
        <div class="heading-kategori">
            <h1>Telusuri Berdasarkan <span>Kategori</span></h1>
        </div>

        <%- include('./resep/kategori') %>
    </section>

    <section class="resep">
        <div class="heading-resep">
            <h1>Resep <span>Terbaru!</span></h1>
        </div>

        <ul class="resep-list">
            <% resep.forEach(function(resep) { %>
            <li class="resep-item">
                <a href="/resep/<%- resep.ID_Resep %>">
                    <img src="/images/resep/<%= resep.Gambar_Resep %>" alt="<%= resep.Nama_Resep  %>" class="resep-image">
                    <div class="resep-detail">
        
                        <a class="resep-button" href="/kategori/<%= resep.Kategori %>"><%= resep.Kategori %></a>
                        <a class="resep-button" href="/waktu/<%= resep.Waktu %>"><i class="bi bi-clock"></i> <%= resep.Waktu %></a>
        
                        <h2><%= resep.Nama_Resep %></h2>
                        <p><%= resep.Deskripsi %></p>
                    </div>
                </a>
            </li>
            <% }); %> 
            <% if (resep.length == 0) { %>
                <p class="empty-text">Belum ada resep</p>
            <% } %>
        </ul>
    </section>

    <div class="lebihbanyak">
        <a href="/resep">Lihat Resep Lainnya</a>
    </div>

    <%- include('./layouts/footer') %>
    
    <script src="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    <script src="/js/main.js"></script>
</body>
</html>